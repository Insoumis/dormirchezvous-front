{
  "name": "dormirchezvous-front",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --hot --history-api-fallback",
    "format": "prettier --write src/{*.{js,jsx,scss},**/*.{js,jsx,scss}} --trailing-comma all --single-quote",
    "prelint": "npm run format",
    "lint": "eslint src --ext .js --ext .jsx",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production webpack -p --config webpack.config.prod.js",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "formik": "^0.9.4",
    "normalize.css": "^7.0.0",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "gh-pages": "^1.0.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.3",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.5",
    "prettier": "^1.7.4",
    "react-hot-loader": "^3.0.0-beta.7",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.4.5"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 3 versions",
              "Firefox ESR"
            ]
          },
          "modules": false
        }
      ],
      "react"
    ],
    "plugins": [
      "transform-class-properties",
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ],
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "arrow-parens": "off",
      "object-curly-newline": "off",
      "function-paren-newline": "off",
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "webpack.config.js",
            "webpack.config.prod.js",
            "**/src/index.jsx"
          ],
          "optionalDependencies": false
        }
      ]
    }
  }
}
